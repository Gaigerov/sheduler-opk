{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["src/*"]
        },
        "baseUrl": ".",
        "types": ["node", "next"]
    },
    "include": ["**/*.ts", "**/*.tsx", ".next/types/**/*.d.ts", "next-env.d.ts", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
